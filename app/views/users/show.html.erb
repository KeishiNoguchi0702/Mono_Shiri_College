<h1><%= "#{@user.last_name}  #{@user.first_name}  さんのプロフィール" %></h1>

<% if @user.id = current_user.id %>
  <div id="certificate_number">在籍番号：  
    <%= @user.certificate_number %>
  </div>

  <div id="email">メールアドレス：
    <%= @user.email %>
  </div>
<% end %>

  <div id="name">学部・学科：  
    <%= @user.department.name %>
  </div>

  <div id="name">氏名：  
    <%= "#{@user.last_name}  #{@user.first_name}" %>
  </div>

  <div id="name_kana">ヨミガナ：  
    <%= "#{@user.last_name_kana}  #{@user.first_name_kana}" %>
  </div>

  <div id="sex">性別：  
    <%= @user.sex.name %>
  </div>

  <div id="position">在籍区分：  
    <%= @user.position.name %>
  </div>

  <div id="profile">プロフィール：  
    <%= @user.profile %>
  </div>

  <%= link_to "トップページに戻る", root_path %>