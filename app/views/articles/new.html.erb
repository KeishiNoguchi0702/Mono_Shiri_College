<h1>記事投稿画面</h1>

<%= form_with(model: @article, local: true) do |f| %>
  <div id="article_title">
    <%= f.label :タイトル %> <br>
    <%= f.text_field :title %>
  </div>
  <div id="article_text">
    <%= f.label :内容 %>
    <%= f.rich_text_area :content %>
  </div>
<% end %>

<%= link_to "トップページに戻る", root_path %>