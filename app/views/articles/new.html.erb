<h1>記事投稿画面</h1>

<%= form_with(model: @article, url: articles_path, local: true) do |f| %>
  <%= render "shared/error_messages", model: f.object %>

  <div id="article_title">
    <%= f.label :タイトル %> <br>
    <%= f.text_field :title, placeholder: 'Type a title...', autofocus: true %>
  </div>
  
  <div id="article_text">
    <%= f.label :内容 %>
    <%= f.rich_text_area :content, placeholder: 'Type a content...' %>
  </div>

  <div class='register-btn'>
    <%= f.submit "記事投稿" ,class:"regist_article" %>
  </div>
<% end %>

<%= link_to "トップページに戻る", root_path %>