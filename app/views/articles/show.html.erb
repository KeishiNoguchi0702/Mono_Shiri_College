<h1><%= @article.title %></h1>
<h1>投稿者：<%= "#{@article.user.last_name}  #{@article.user.first_name}  さん" %></h1>

<div id="article_content">
  <%= @article.content %>
</div>

<ul>
  <% if @article.user_id == current_user.id %>
    <li><%= link_to '投稿内容を編集する', edit_article_path(@article.id), class: "top_path" %></li>
    <li><%= link_to '投稿内容を削除する', article_path(@article.id), method: :delete, class: "top_path" %></li>
  <% end %>
    <li><%= link_to 'トップページに戻る', root_path, class: "top_path" %></li>
    <li><%= link_to '記事一覧に戻る', articles_path, class: "articles_path" %></li>
</ul>