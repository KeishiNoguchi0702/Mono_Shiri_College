<%#<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        アカウント登録
      </h1>
    </div>

    <%= render "devise/shared/error_messages", model: f.object %>

    <%#在籍番号%>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">在籍番号</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :certificate_number, class:"input-default", id:"certificate-number", placeholder:"Ex）012345", minlength:"6", maxlength:"6" %>
    </div>

    <%# メールアドレス %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
    </div>

    <%# パスワード %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>

    <%# パスワード確認 %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>

    <%#氏名%>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前(全角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 物知", maxlength:"10" %>
        <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 太郎", maxlength:"10" %>
      </div>
    </div>

    <%#ヨミガナ%>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前カナ(全角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) モノシリ", maxlength:"40" %>
        <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) タロウ", maxlength:"40" %>
      </div>
    </div>

    <%#学部・学科%>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">学部・学科</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.collection_select(:department_id, Department.all, :id, :name, {}, {class:"department-select"}) %>
      </div>
    </div>

    <%#性別%>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">性別</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"sex-select"}) %>
      </div>
    </div>

    <%#在籍区分%>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">在籍区分</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {class:"position-select"}) %>
      </div>
    </div>

    <%#プロフィール%>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">プロフィール</label>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_area :profile, class:"input-name", id:"profile",, placeholder:"3000字以内で入力してください。", maxlength:"3000" %>
      </div>
    </div>

    <%#プロフィール画像%>
    <div class="img-upload">
      <div class="weight-bold-text">プロフィール画像</div>
      <div class="click-upload">
        <%= f.file_field :image, id:"user-image" %>
      </div>
    </div>
    <div id="image_list"></div>
    <%= image_tag @user.image, id: 'image' if @user.image.present? %> 

    <div class='register-btn'>
      <%= f.submit "アカウント登録" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>

